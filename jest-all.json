{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".(e2e-)?spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["src/**/*.ts", "!src/common/**/*.ts"],
  "coveragePathIgnorePatterns": ["src/main.ts", ".mock.ts"]
}
